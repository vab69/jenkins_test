#!groovy
// Check host properties
properties([disableConcurrentBuilds()])

pipeline {
    agent { 
        label 'main'
		customWorkspace "$JOB_NAME"
        }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("First step") {
            steps {
                sh 'ssh root@192.168.1.47 \'hostname\''
            }
        }
        stage("Second step") {
            steps {
                sh 'ssh root@192.168.1.47 \'uptime\''
            }
        }
    }